<div class="app-card-container">
	<div class="card">
		<h1>About Me</h1>

		<hr>

		<div class="row">
			<div class="col-md-4">
				<%= image_tag "profile.jpg", width: 300, alt: "Profile Image" %>
			</div>

			<div class="col-md-8">
				<p>I am a biggining developer with a facination as to how programs and digital data function, 
				how to use it, and how to make it better.</p>

				<p>
					<button 
						class="btn btn-primary"
						type="button"
						data-toggle="collapse"
						data-target="#jobHistory"
						aria-expanded="false"
						aria-controler="jobHistory"
					>
					 Job Histroy
					</button>

					<button 
						class="btn btn-primary"
						type="button"
						data-toggle="collapse"
						data-target="#education"
						aria-expanded="false"
						aria-controler="education"
					>
					 Education
					</button>
				</p>

				<p>
					<div class="collapse" id="jobHistory">
						<div class="card card-block">
							Job 1
						</div>
						<div class="card card-block">
							Job 2
						</div>
					</div>

					<div class="collapse" id="education">
						<div class="card card-block">
							School 1
						</div>
						<div class="card card-block">
							School 2
						</div>
						<div class="card card-block">
							School 3
						</div>
					</div>
				</p>
			</div>
		</div>
	</div>
</div>





